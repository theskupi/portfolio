---
import SkillsLayout from '../../layouts/SkillsLayout.astro'
import TechBadge from '../../components/TechBadge.astro'

enum Techs {
	GITHUB = 'GitHub',
	GITHUB_ACTIONS = 'GitHub Actions',
	CIRCLECI = 'CircleCI',
	GITLAB = 'GitLab',
	AWS = 'AWS',
	LERNA = 'Lerna',
	ROLLUP = 'Rollup',
	GULP = 'Gulp',
	WEBPACK = 'Webpack',
	PRETTIER = 'Prettier',
	ESLINT = 'ESLint',
	PNPM = 'pnpm'
}
---

<SkillsLayout>
	<div>
		<h1>DevOps Skills</h1><p>DevOps povidani</p><div
			class="mt-4 flex flex-wrap gap-2"
		>
			{Object.values(Techs).map((tech) => <TechBadge>{tech}</TechBadge>)}
		</div>
	</div>
</SkillsLayout>
