---
import { Picture } from 'astro:assets'
import profilePic from '../images/profile_pic.webp'

import LineCounter from '../components/LineCounter.astro'
import Layout from '../layouts/Layout.astro'
---

<style>
	.breakpoint-line {
		background-image: linear-gradient(
			to right,
			transparent,
			rgba(225, 79, 79, 50%) 10%,
			transparent
		);
	}
</style>
<Layout title="Vlastimil Skupien - about">
	<main class="flex h-full items-center">
		<aside class="absolute left-1/2 -z-10 max-w-md">
			<Picture src={profilePic} alt="Profile picture" />
		</aside>
		<section class="relative flex h-full w-[60%] items-center">
			<LineCounter lines={15} startRow={20} size="sm" />
			<div class="*:p-x-1 mr-4 mt-8 text-sm">
				<p class="breakpoint-line relative flex items-center gap-5 pl-2">
					<span class="h-3 w-3 rounded-full bg-red-500"></span>
					<span class="text-yellow-300">{`<AboutMe />`}</span>
				</p>
				<p class="mb-7 pl-10 leading-loose">
					I am a fullstack developer with huge interest in web development and
					design generally. While I engage in both backend and frontend work, my
					preference lies in frontend development. I've recently delved into UX
					design as well.
				</p>
				<p>woking experience</p>
				<p>education</p>
			</div>
		</section>
	</main>
</Layout>
